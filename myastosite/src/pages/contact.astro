---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact - PalChat: Get in Touch">
  <div class="container mx-auto px-4 py-12 relative">
    <!-- Background decoration -->
    <div class="absolute inset-0 bg-gradient-to-br from-green-50/30 to-blue-50/30"></div>
    
    <div class="max-w-6xl mx-auto relative z-10">
      <!-- Hero Section -->
      <div class="text-center mb-16 animate-fade-in-up">
        <h1 class="text-5xl lg:text-6xl font-bold text-gray-900 mb-6 bg-gradient-to-r from-gray-900 via-green-800 to-blue-800 bg-clip-text text-transparent">
          Get in Touch
        </h1>
        <p class="text-xl text-gray-600 mb-4 max-w-3xl mx-auto">
          Ready to join the movement for a more humane digital future? We'd love to hear from you.
        </p>
        <div class="w-24 h-1 bg-gradient-to-r from-green-500 to-blue-500 mx-auto rounded-full"></div>
      </div>

      <!-- Contact Categories Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
        <!-- General Inquiries -->
        <div class="glass rounded-2xl p-6 shadow-lg border border-white/20 hover:shadow-xl transition-all duration-300">
          <div class="w-12 h-12 bg-gradient-to-br from-blue-100 to-blue-200 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">General Inquiries</h3>
          <p class="text-gray-600 text-sm mb-4">Questions about our mission, vision, or how to get involved.</p>
          <div class="text-xs text-gray-500">Response time: 24-48 hours</div>
        </div>

        <!-- Technical Support -->
        <div class="glass rounded-2xl p-6 shadow-lg border border-white/20 hover:shadow-xl transition-all duration-300">
          <div class="w-12 h-12 bg-gradient-to-br from-green-100 to-green-200 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Technical Support</h3>
          <p class="text-gray-600 text-sm mb-4">Help with platform features, privacy settings, or technical issues.</p>
          <div class="text-xs text-gray-500">Response time: 12-24 hours</div>
        </div>

        <!-- Partnership -->
        <div class="glass rounded-2xl p-6 shadow-lg border border-white/20 hover:shadow-xl transition-all duration-300">
          <div class="w-12 h-12 bg-gradient-to-br from-purple-100 to-purple-200 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Partnership</h3>
          <p class="text-gray-600 text-sm mb-4">Collaborate with us on privacy-first initiatives and community projects.</p>
          <div class="text-xs text-gray-500">Response time: 48-72 hours</div>
        </div>

        <!-- Feedback -->
        <div class="glass rounded-2xl p-6 shadow-lg border border-white/20 hover:shadow-xl transition-all duration-300">
          <div class="w-12 h-12 bg-gradient-to-br from-orange-100 to-orange-200 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Feedback</h3>
          <p class="text-gray-600 text-sm mb-4">Share your thoughts, suggestions, or ideas for improvement.</p>
          <div class="text-xs text-gray-500">Response time: 24-48 hours</div>
        </div>

        <!-- Community -->
        <div class="glass rounded-2xl p-6 shadow-lg border border-white/20 hover:shadow-xl transition-all duration-300">
          <div class="w-12 h-12 bg-gradient-to-br from-pink-100 to-pink-200 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Community</h3>
          <p class="text-gray-600 text-sm mb-4">Join our community discussions and connect with like-minded individuals.</p>
          <div class="text-xs text-gray-500">Response time: 12-24 hours</div>
        </div>

        <!-- Press/Media -->
        <div class="glass rounded-2xl p-6 shadow-lg border border-white/20 hover:shadow-xl transition-all duration-300">
          <div class="w-12 h-12 bg-gradient-to-br from-indigo-100 to-indigo-200 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Press/Media</h3>
          <p class="text-gray-600 text-sm mb-4">Media inquiries, interviews, or press-related questions.</p>
          <div class="text-xs text-gray-500">Response time: 24-48 hours</div>
        </div>
      </div>

      <!-- Main Contact Form -->
      <div class="glass rounded-2xl shadow-xl border border-white/20 overflow-hidden mb-12 animate-fade-in-up" style="animation-delay: 0.1s;">
        <!-- Header -->
        <div class="bg-gradient-to-r from-green-600 to-blue-600 p-8 text-white relative overflow-hidden">
          <div class="absolute top-0 right-0 w-32 h-32 bg-white/10 rounded-full -translate-y-16 translate-x-16"></div>
          <div class="absolute bottom-0 left-0 w-24 h-24 bg-white/10 rounded-full translate-y-12 -translate-x-12"></div>
          
          <div class="relative z-10">
            <h2 class="text-2xl font-semibold mb-4 flex items-center gap-3">
              <div class="w-8 h-8 bg-white/20 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
              </div>
              Send Us a Message
            </h2>
            <p class="text-green-100 leading-relaxed">
              We're committed to privacy-first communication. Your message will be handled with care and respect for your digital sovereignty.
            </p>
          </div>
        </div>

        <!-- Form Section -->
        <div class="p-8 lg:p-12">
          <form id="contact-form" class="space-y-6">
            <div class="grid md:grid-cols-2 gap-6">
              <div class="group">
                <label for="name" class="block text-sm font-medium text-gray-700 mb-2 group-focus-within:text-green-600 transition-colors duration-200">Name (Optional)</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200 bg-white/50 backdrop-blur-sm hover:bg-white/80"
                  placeholder="Your name (optional)"
                />
              </div>

              <div class="group">
                <label for="category" class="block text-sm font-medium text-gray-700 mb-2 group-focus-within:text-green-600 transition-colors duration-200">Category *</label>
                <select
                  id="category"
                  name="category"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200 bg-white/50 backdrop-blur-sm hover:bg-white/80"
                >
                  <option value="">Select a category</option>
                  <option value="general">General Inquiry</option>
                  <option value="technical">Technical Support</option>
                  <option value="partnership">Partnership</option>
                  <option value="feedback">Feedback</option>
                  <option value="community">Community</option>
                  <option value="press">Press/Media</option>
                </select>
              </div>
            </div>

            <div class="group">
              <label for="subject" class="block text-sm font-medium text-gray-700 mb-2 group-focus-within:text-green-600 transition-colors duration-200">Subject *</label>
              <input
                type="text"
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200 bg-white/50 backdrop-blur-sm hover:bg-white/80"
                placeholder="Brief description of your inquiry"
              />
            </div>

            <div class="group">
              <label for="message" class="block text-sm font-medium text-gray-700 mb-2 group-focus-within:text-green-600 transition-colors duration-200">Message *</label>
              <textarea
                id="message"
                name="message"
                rows="6"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200 bg-white/50 backdrop-blur-sm hover:bg-white/80 resize-none"
                placeholder="Tell us more about your inquiry..."
              ></textarea>
            </div>

            <div class="flex items-start gap-3 p-4 bg-blue-50 rounded-xl">
              <input type="checkbox" id="privacy" name="privacy" required class="mt-1 w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
              <label for="privacy" class="text-sm text-gray-700">
                I understand that PalChat respects my privacy and will handle my information according to our 
                <a href="/privacy" class="text-blue-600 hover:text-blue-800 underline">Privacy Policy</a>. 
                I consent to being contacted regarding my inquiry.
              </label>
            </div>

            <button
              type="submit"
              id="submit-btn"
              class="w-full bg-gradient-to-r from-green-600 to-blue-600 text-white px-6 py-4 rounded-xl hover:from-green-700 hover:to-blue-700 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105 font-semibold flex items-center justify-center gap-2"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
              </svg>
              <span id="submit-text">Send Message</span>
            </button>
          </form>

          <!-- Success/Error Messages -->
          <div id="message-container" class="mt-6 hidden">
            <div id="success-message" class="hidden p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg">
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span id="success-text"></span>
              </div>
            </div>
            <div id="error-message" class="hidden p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                </svg>
                <span id="error-text"></span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- FAQ Section -->
      <div class="glass rounded-2xl p-8 shadow-xl border border-white/20 mb-12 animate-fade-in-up" style="animation-delay: 0.2s;">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Frequently Asked Questions</h2>
        <div class="grid md:grid-cols-2 gap-8">
          <div class="space-y-6">
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">How quickly will you respond?</h3>
              <p class="text-gray-600">We aim to respond within 24-48 hours for most inquiries. Technical support and urgent matters are prioritized for faster response times.</p>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Is my information secure?</h3>
              <p class="text-gray-600">Absolutely. We follow privacy-by-design principles and only collect the information necessary to respond to your inquiry. Your data is never sold or shared with third parties.</p>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Can I remain anonymous?</h3>
              <p class="text-gray-600">Yes, you can contact us anonymously. We respect your choice to maintain privacy and will still provide helpful responses.</p>
            </div>
          </div>
          <div class="space-y-6">
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">How can I join the community?</h3>
              <p class="text-gray-600">We have various community channels including forums, discussion groups, and regular meetups. Contact us to learn more about joining our community.</p>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Do you offer partnerships?</h3>
              <p class="text-gray-600">We're always open to partnerships that align with our mission of digital sovereignty and community empowerment. Reach out to discuss potential collaborations.</p>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">What if I have an urgent issue?</h3>
              <p class="text-gray-600">For urgent technical issues or security concerns, please mark your message as urgent in the subject line. We'll prioritize these inquiries.</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Additional Contact Methods -->
      <div class="grid lg:grid-cols-2 gap-8 mb-12">
        <!-- Social Media & Community -->
        <div class="glass rounded-2xl p-8 shadow-xl border border-white/20 animate-fade-in-up" style="animation-delay: 0.3s;">
          <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center gap-3">
            <div class="w-8 h-8 bg-gradient-to-br from-blue-100 to-blue-200 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            Connect With Us
          </h2>
          <div class="space-y-4">
            <a href="#" class="flex items-center p-4 text-gray-600 hover:text-blue-500 hover:bg-blue-50 rounded-xl transition-all duration-300 group">
              <div class="w-10 h-10 bg-gradient-to-br from-blue-100 to-blue-200 rounded-lg flex items-center justify-center mr-3 group-hover:scale-110 transition-transform duration-300">
                <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/></svg>
                </div>
              <div>
                <div class="font-medium">Twitter</div>
                <div class="text-sm text-gray-500">Follow us for updates and discussions</div>
              </div>
            </a>
            
            <a href="#" class="flex items-center p-4 text-gray-600 hover:text-blue-700 hover:bg-blue-50 rounded-xl transition-all duration-300 group">
              <div class="w-10 h-10 bg-gradient-to-br from-blue-100 to-blue-200 rounded-lg flex items-center justify-center mr-3 group-hover:scale-110 transition-transform duration-300">
                <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
                </div>
              <div>
                <div class="font-medium">LinkedIn</div>
                <div class="text-sm text-gray-500">Connect professionally</div>
              </div>
            </a>
            
            <a href="#" class="flex items-center p-4 text-gray-600 hover:text-gray-900 hover:bg-gray-50 rounded-xl transition-all duration-300 group">
              <div class="w-10 h-10 bg-gradient-to-br from-gray-100 to-gray-200 rounded-lg flex items-center justify-center mr-3 group-hover:scale-110 transition-transform duration-300">
                <svg class="w-5 h-5 text-gray-600" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/></svg>
                </div>
              <div>
                <div class="font-medium">GitHub</div>
                <div class="text-sm text-gray-500">Contribute to our open source projects</div>
              </div>
            </a>

            <a href="#" class="flex items-center p-4 text-gray-600 hover:text-red-500 hover:bg-red-50 rounded-xl transition-all duration-300 group">
              <div class="w-10 h-10 bg-gradient-to-br from-red-100 to-red-200 rounded-lg flex items-center justify-center mr-3 group-hover:scale-110 transition-transform duration-300">
                <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
                </div>
              <div>
                <div class="font-medium">Email</div>
                <div class="text-sm text-gray-500">For privacy-focused communication</div>
              </div>
            </a>
          </div>
        </div>

        <!-- Community Guidelines & Info -->
        <div class="glass rounded-2xl p-8 shadow-xl border border-white/20 animate-fade-in-up" style="animation-delay: 0.4s;">
