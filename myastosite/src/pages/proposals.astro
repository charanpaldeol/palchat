      try {
        const response = await fetch(`${API_BASE}/api/system/scan`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          }
        });
        
        const data = await response.json();
        
        if (data.success) {
          // Show results
          document.getElementById('scan-message').textContent = data.message;
          
          // Display priority breakdown
          const priorityBreakdown = document.getElementById('priority-breakdown');
          priorityBreakdown.innerHTML = '';
          Object.entries(data.scan_summary.priority_breakdown).forEach(([level, count]) => {
            if (count > 0) {
              const color = level === 'Critical' ? 'text-red-600' : 
                          level === 'High' ? 'text-orange-600' : 
                          level === 'Medium' ? 'text-yellow-600' : 'text-gray-600';
              priorityBreakdown.innerHTML += `
                <div class="flex justify-between">
                  <span class="${color} font-medium">${level}</span>
                  <span class="font-bold">${count}</span>
                </div>
              `;
            }
          });
          
          // Display value categories
          const valueCategories = document.getElementById('value-categories');
          valueCategories.innerHTML = '';
          Object.entries(data.scan_summary.value_categories).forEach(([category, count]) => {
            const displayName = category.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase());
            valueCategories.innerHTML += `
              <div class="flex justify-between">
                <span class="text-gray-700">${displayName}</span>
                <span class="font-bold text-blue-600">${count}</span>
              </div>
            `;
          });
          
          // Display scan summary
          const scanSummary = document.getElementById('scan-summary');
          scanSummary.innerHTML = `
            <div class="flex justify-between">
              <span>Areas Analyzed:</span>
              <span class="font-bold">${data.scan_summary.areas_analyzed}</span>
            </div>
