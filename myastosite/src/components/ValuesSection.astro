---
interface ValueItem {
  title: string;
  description: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  values?: ValueItem[];
  backgroundColor?: string;
  cardBackgroundColor?: string;
}

const {
  title = "Our Values",
  subtitle = "These core values guide everything we do.",
  backgroundColor = "values-section",
  cardBackgroundColor = "values-card",
  values = [
    {
      title: "Digital Sovereignty",
      description: "Full control over your digital presence and data"
    },
    {
      title: "Collective Ownership",
      description: "Communities own the platforms they use"
    },
    {
      title: "Privacy by Design",
      description: "Privacy as a default, not an afterthought"
    },
    {
      title: "Transparency",
      description: "Openness in technology and intention"
    },
    {
      title: "Community First",
      description: "Prioritizing people over profit"
    },
    {
      title: "Human Flourishing",
      description: "Technology that uplifts humanity"
    }
  ]
} = Astro.props;

// Color variants for the 10 values
const colorVariants = [
  "values-card-blue",
  "values-card-green", 
  "values-card-purple",
  "values-card-red",
  "values-card-yellow",
  "values-card-pink",
  "values-card-cyan",
  "values-card-indigo",
  "values-card-emerald",
  "values-card-orange"
];
---

<section class={backgroundColor}>
  <div class="component-container">
    <div class="values-container">
      <div class="values-header">
        <h2 class="values-title">
          {title}
        </h2>
        <p class="values-subtitle">
          {subtitle}
        </p>
      </div>
      
      <div class="values-grid">
        {values.map((value, index) => (
          <div class={`${cardBackgroundColor} ${colorVariants[index % colorVariants.length]}`}>
            <h3 class="values-card-title">{value.title}</h3>
            <p class="values-card-description">{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section> 