---
interface Props {
  title?: string;
  subtitle?: string;
  primaryButtonText?: string;
  primaryButtonLink?: string;
  secondaryButtonText?: string;
  secondaryButtonLink?: string;
}

const {
  title = "Technology that serves humanity, not profit",
  subtitle = "We envision a world where digital platforms are collectively owned by the communities that use them. Where value flows back to people, not corporations.",
  primaryButtonText = "Our Vision",
  primaryButtonLink = "#vision",
  secondaryButtonText = "Our Mission",
  secondaryButtonLink = "#mission"
} = Astro.props;
---

<section class="bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50 dark:from-slate-900 dark:via-blue-900 dark:to-indigo-900 py-20 lg:py-32 relative overflow-hidden">
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-5xl lg:text-7xl font-bold text-gray-900 dark:text-white mb-8 leading-tight">
        {title.includes('humanity, not profit') ? 
          <>
            Technology that serves
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-600 dark:from-blue-400 dark:via-purple-400 dark:to-indigo-400">humanity, not profit</span>
          </> : 
          title
        }
      </h1>
      
      <p class="text-xl lg:text-2xl text-gray-600 dark:text-gray-300 mb-12 max-w-3xl mx-auto leading-relaxed">
        {subtitle}
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href={primaryButtonLink} class="inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-gray-900 to-black dark:from-white dark:to-gray-100 text-white dark:text-black font-semibold rounded-xl hover:from-gray-800 hover:to-gray-900 dark:hover:from-gray-100 dark:hover:to-gray-200 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105">
          {primaryButtonText}
        </a>
        <a href={secondaryButtonLink} class="inline-flex items-center gap-2 px-8 py-4 border-2 border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 font-semibold rounded-xl hover:border-gray-400 dark:hover:border-gray-500 hover:bg-white/50 dark:hover:bg-gray-800/50 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105">
          {secondaryButtonText}
        </a>
      </div>
    </div>
  </div>
</section> 