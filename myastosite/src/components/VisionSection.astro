---
interface VisionItem {
  title: string;
  description: string;
  icon: string;
  iconColor: string;
  bgColor: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  visionItems?: VisionItem[];
  backgroundColor?: string;
}

const {
  title = "Our Vision",
  subtitle = "A digital world where communities own the platforms they use, where transparency is the norm, and where technology serves human flourishing.",
  backgroundColor = "bg-white dark:bg-gray-900",
  visionItems = [
    {
      title: "Collective Ownership",
      description: "Communities own and govern the platforms they use",
      icon: "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z",
      iconColor: "text-blue-600 dark:text-blue-400",
      bgColor: "bg-blue-100 dark:bg-blue-900/50"
    },
    {
      title: "Transparency",
      description: "Open algorithms, clear policies, and accountable governance",
      icon: "M15 12a3 3 0 11-6 0 3 3 0 016 0z M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z",
      iconColor: "text-green-600 dark:text-green-400",
      bgColor: "bg-green-100 dark:bg-green-900/50"
    },
    {
      title: "Human Flourishing",
      description: "Technology that uplifts humanity, not exploits it",
      icon: "M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z",
      iconColor: "text-purple-600 dark:text-purple-400",
      bgColor: "bg-purple-100 dark:bg-purple-900/50"
    }
  ]
} = Astro.props;
---

<section id="vision" class={`py-20 ${backgroundColor}`}>
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          {title}
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          {subtitle}
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {visionItems.map((item) => (
          <div class="text-center">
            <div class={`w-16 h-16 ${item.bgColor} rounded-2xl flex items-center justify-center mx-auto mb-6`}>
              <svg class={`w-8 h-8 ${item.iconColor}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={item.icon}></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">{item.title}</h3>
            <p class="text-gray-600 dark:text-gray-300">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section> 